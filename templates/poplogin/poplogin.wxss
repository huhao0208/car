
.poplogin-mask {
    height: 100%;
    width: 100%;
    position: fixed;
    top: 0;
    background: rgba(0, 0, 0, 0.3);
    text-align: center;
    z-index: 199;
}

.poplogin {
    width: 600rpx;
    margin: 360rpx auto;
    background: #FFF;
    border-radius: 16rpx;
}

.pop-head {
    text-align: left;
    padding: 70rpx 60rpx;
}

.pop-head cover-image {
    height: 72rpx;
    width: 72rpx;
    border-radius: 72rpx;
    margin-right: 30rpx;
    vertical-align: middle;
    float: left;
}

.pop-head cover-view {
    font-size: 30rpx;
    color: #999;
    line-height: 96rpx;
    font-weight: 300;
    float: left;
}

.pop-opt {
    overflow: hidden;
    border-top: 1rpx solid #DDD;

}

.pop-btnl,
.pop-btnr {
    height: 80rpx;
    width: 299rpx;
    background: #FFF;
    font-size: 32rpx;
    color: #999;
    float: left;
    font-weight: 300;
    border-radius: 0 0 0 16rpx;
}

.pop-btnr {
    float: right;
    color: #555;
    border-left: 2rpx solid #DDD;
    border-radius: 0 0 16rpx 0;
}
